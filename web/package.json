{
  "devDependencies": {
    "daisyui": "^5.1.1",
    "esbuild": "0.25.9",
    "tailwindcss": "^3.4.17"
  },
  "scripts": {
    "build:css": "npx tailwindcss -i src/main.css -o public/assets/main.css",
    "build:js": "esbuild src/main.js --bundle --sourcemap --outfile=public/assets/main.js",
    "watch:css": "npm run build:css -- --watch",
    "watch:js": "npm run build:js -- --watch=forever"
  },
  "dependencies": {
    "autoprefixer": "^10.4.21",
    "htmx.org": "^2.0.6",
    "postcss": "^8.5.6"
  }
}
